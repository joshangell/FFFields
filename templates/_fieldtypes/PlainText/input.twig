{% set config = {
    id: id,
    name: name,
    value: value,
    maxlength: settings.maxLength,
    showCharsLeft: settings.maxLength ? true : false,
    placeholder: settings.placeholder|t,
    rows: settings.initialRows
} %}

{% if settings.multiline %}
    <text-area v-bind:config="{{ config|json_encode() }}"></text-area>
{% else %}
    <text-input v-bind:config="{{ config|json_encode() }}"></text-input>
{% endif %}