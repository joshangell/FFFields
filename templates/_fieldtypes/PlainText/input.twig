{% import "_includes/forms" as forms %}

{% set config = {
    id: name,
    name: name,
    value: value,
    maxlength: settings.maxLength,
    showCharsLeft: true,
    placeholder: settings.placeholder|t,
    rows: settings.initialRows
} %}

{% if settings.multiline %}
    {{ forms.textarea(config) }}
{% else %}
    {{ forms.text(config) }}
{% endif %}
